<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="InoAgenti.Views.Add.AddEditWindow"
        Title="Add/EditWindow">

    <StackPanel>
        <Button x:Name="AddPhotoButton" Content="Добавить фото" Click="AddPhoto" />

        <ComboBox Name="TypeComboBox" Width="200" SelectedIndex="0">
            <ComboBoxItem Content="Очень плохой" />
            <ComboBoxItem Content="Плохой" />
            <ComboBoxItem Content="Средний" />
            <ComboBoxItem Content="Хороший" />
            <ComboBoxItem Content="Очень хороший" />
        </ComboBox>

        <TextBox Watermark="Имя:" Name="Name" />
        <TextBox Watermark="Размер скидки:" Name="SalesCount" />
        <TextBox Watermark="Номер телефона:" Name="PhoneNumber" />
        <TextBox Watermark="Почта:" Name="Email" />
        <TextBox Watermark="Приоритет:" Name="Priority" />
        <TextBox Watermark="SuccessRate:" Name="SuccessRate" />

        <Button x:Name="CreateAgentButton" Click="CreateAgent" />
        <Button x:Name="DeleteAgentButton" Click="DeleteAgent" Content="Удалить агента" IsVisible="False" />
        
        <TextBlock HorizontalAlignment="Center" Name="Error" Foreground="Red" />
    </StackPanel>

</Window>